---
layout: default
---

- var arrDate = document.date.toDateString().split(' ')

article#post.post
	.row
		.col-lg-10.col-lg-offset-1
			h1= document.title
			hr
			.post-image
				img(src= document.image, alt="Header Image")
			.post-content!= content

			#article-meta
				.row
					.col-lg-4.col-lg-offset-4
						span.date= arrDate[1] + ' ' + arrDate[2] + ' ' + arrDate[3]
						span.author= site.author
