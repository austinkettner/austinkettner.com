<html>
<head>
    <title><%= @getPreparedTitle() %></title>
    <%- @getBlock("meta").toHTML() %>
    <%- @getBlock("scripts").add(["/vendor/typekit.js"]).toHTML() %>
    <%- @getBlock("styles").add(["/styles/screen.css"]).toHTML() %>
    <link href="/images/favicon.ico" rel="icon" type="image/x-icon">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
</head>
<body>
  <header>
    <div id="logo">
      <a href='/'>
        <img src="/images/logo.png" />
      </a>
    </div>
    <nav id="nav">
      <% for page in @getCollection("pages").toJSON(): %>
        <a href="<%= page.url %>" class="<%= if page.id is @document.id then 'active' else 'inactive' %>">
          <%= page.title %>
        </a>
      <% end %>
    </nav>
  </header>
  <div id="container">
    <%- @content %>
  </div>
  <footer>
    <div id="copyright">
      <p>  &#xA9; 2013 Austin Kettner. All Rights Reserved.</p>
  </footer>
  <div id="scripts">
    <%- @getBlock("scripts").add(["/vendor/jquery.js","/vendor/google-analytics.js","/scripts/script.js"]).toHTML() %>
  </div>
</body>
</html>