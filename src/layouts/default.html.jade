- var scripts = getBlock('scripts')
- var styles = getBlock('styles')

//- jQuery
- scripts.add(["//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"])

//- Google Web Fonts
- styles.add(["http://fonts.googleapis.com/css?family=Alegreya:400italic,400,700,900"])

//- Animate.css and Prettify CSS
- styles.add(["/vendor/animate.css","/vendor/prism.css"])

// Prettify JS
- scripts.add(["/vendor/prism.js"])


//- User
- styles.add(["/styles/style.css"])

doctype html
html(lang="en")
  head

    //- Meta
    meta(http-equiv="content-type", content="text/html; charset=utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")

    //- Site title and description
    title= getPreparedTitle()
    meta(name="description", content=site.description || '')
    meta(name="keywords", content=site.keywords || '')
    meta(name="author", content=site.author || '')

    //- Mobile viewport optimized: h5bp.com/viewport
    meta(name="viewport", content="width=device-width, initial-scale=1.0")

    //- Favicon
    link(rel="shortcut icon", href="/images/favicon.ico")

    //- Styles
    != styles.toHTML()

  body
    header#header
      .container
        .logo
            h3 Austin
              span(class="orange") Kettner

        nav
          ul.nav
            each doc in getCollection('pages').toJSON()
              - page_class = (document.url === doc.url) ? 'active' : null
              li(class=page_class)
                a(href=doc.url)= doc.title

    section#content
      != content

    // Google Analytics
    script(type="text/javascript").
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-38758664-1', 'auto');
      ga('send', 'pageview');

    // JQuery, Bootstrap JS, others
    != scripts.toHTML()
