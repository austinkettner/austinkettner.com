- var scripts = getBlock('scripts')
- var styles = getBlock('styles')

//- jQuery
- scripts.add(["//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"])

//- Bootstrap 3
-styles.add(["//netdna.bootstrapcdn.com/bootstrap/3.0.1/css/bootstrap.min.css"])
-scripts.add(["//netdna.bootstrapcdn.com/bootstrap/3.0.1/js/bootstrap.min.js"])

//- Google Web Fonts
- scripts.add(["//use.typekit.net/ttg6nzr.js"])

//- Animate.css
- styles.add(["/vendor/animate.css"])

//- User
- styles.add(["/styles/style.css"])

doctype 6
html(lang="en")
  head

    //- Meta
    meta(http-equiv="content-type", content="text/html; charset=utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")

    //- Site title and description
    title= getPreparedTitle()
    meta(name="description", content=site.description || '')
    meta(name="keywords", content=site.keywords || '')
    meta(name="author", content=site.author || '')

    //- Mobile viewport optimized: h5bp.com/viewport
    meta(name="viewport", content="width=device-width, initial-scale=1.0")

    //- Favicon
    link(rel="shortcut icon", href="/images/favicon.ico")

    //- Styles
    != styles.toHTML()

  body
    .container-narrow.animated.fadeIn
        .col-lg-12
            .header.clearfix
                .logo
                    h3 Austin
                        span(class="orange") Kettner

                ul.nav.nav-pills
                  each doc in getCollection('pages').toJSON()
                    - page_class = (document.url === doc.url) ? 'active' : null
                    li(class=page_class)
                      a(href=doc.url)= doc.title

            // Content
            != content

    // Scripts

    // Typekit
    script.
        try{Typekit.load();}catch(e){}

    // Google Analytics
    script.
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-38758664-1']);
        _gaq.push(['_setDomainName', 'austinkettner.com']);
        _gaq.push(['_trackPageview']);

        (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
    // JQuery, Bootstrap JS, others
    != scripts.toHTML()

