@import 'axis'
@import 'jeet'
@import 'rupture'

rupture.enable-em-breakpoints = true

// Normalize Mode, engage!
normalize-css()
base()

// Colors, spawn!
light-grey = #E9E9E5
grey = #eaeaea
shaded-grey = #DBDBDB
dark-grey = #989797
slate = #6C6B69
brown = #887668
teal = #7AD3C8
tan = #DCD2AA
gold = #BB9F6D
green = #BFDCAA

font-size(n)
	font-size n * 1px
	font-size n * 1rem
	line-height n * 1rem

// Custom Vendor Prefixing Rest Params
transform(args...)
	-webkit-transform args
	transform args

html
	font-size 1px

body
	font-family 'Fira Sans', sans-serif
	color #5d5d5d
	font-weight 400
	z-index 1
	font-size 14
	margin 0
	// background linear-gradient(0deg, rgba(255, 255, 255, 0.20), rgba(255, 255, 255, 0.40)), url(/images/bg-image-1.png) no-repeat center center / cover

// Headings
h1
	font-family 'Fira Sans', sans-serif
	font-weight 200
	color slate
	font-size 48
	margin-bottom .5em
	margin-top 1.25em

h2
	font-family 'Fira Sans', sans-serif
	font-weight 500
	color slate
	font-size 38
	margin-bottom 0.25em
	margin-top 1.25em

h3
	font-family 'Fira Sans', sans-serif
	font-weight 400
	color slate
	font-size 30

h4
	font-family 'Fira Sans', sans-serif
	font-weight 400
	color slate
	font-size 22

h5
	font-family 'Fira Sans', sans-serif
	font-weight 400
	color slate
	font-size 16

p
	font-family 'Fira Sans', sans-serif
	font-size 15
	font-weight 400
	text-align justify
	line-height 2
	color #777
	&.highlight
		font-style italic
		color orange

a
	color slate
	text-decoration none
	font-weight 500
	font-size 15

img
	border-radius 3px
	z-index 0

hr
	background rgba(50, 50, 50, 0.3)
	height 1px
	margin-top 40px
	margin-bottom 40px
	border none

code
	white-space normal
	background rgba(0, 0, 0, 0.1)
	padding 10px 20px
	border-radius 3px

button
	padding 14px 32px 12px
	background tan
	font-size 16
	font-weight 500
	text-transform uppercase
	border none
	color white
	margin-top 30px
	border-radius 3px
	transition all 1.25s
	&:hover
		background gold
		transition all 1.25s

.cursive
	font-family 'Pacifico', cursive

// Base Elements
.container
	center(max-width = 960px)

.container-narrow
	center(max-width = 880px)

// Stylin'
#header
	clearfix()
	position fixed
	width 100%
	z-index 1000
	padding 20px 0 14px
	transition all 0.75s
	&.scrolled
		background light-grey
		box-shadow 0px 6px 12px 0px rgba(189, 189, 189, 0.75)
		transition all 1s
	.brand
		column(1/3)
		text-align left
		margin-top 4px
		.name
			font-size 15
			color slate
			font-weight 500
			display inline-block
			text-transform uppercase
		.profession
			font-size 15
			display inline-block
			margin-left 4%
			color brown
			margin-top 3px
			text-transform capitalize
	nav
		column(2/3)
		text-align right
		ul.nav
			margin 0
			padding 0
			li
				display inline-block
				overflow hidden
				box-sizing border-box
				margin-right 1%
				transition all 1.25s
				&:last-child
					margin-right 0
				&:hover
					a
						color dark-grey
						transition all 0.75s
				a
					font-size 15
					color slate
					font-weight 700
					padding 9px 20px 7px
					display block
					text-transform uppercase
					transition all 1.25s

section
	// Per Section Styles (mainly backgrounds)
	.slant-bg
		width 100%
		height 100%
		position absolute
		box-sizing border-box
	#intro
		background light-grey
		position relative
		z-index 200
		h1, h2, h3, h4, h5, p
			color white
		.slant-bg
			background light-grey
			transform matrix(1,-0.06, 0, 1.1, 0, 1)
			z-index -100
	#about
		background teal
		position relative
		z-index 300
		h1, h2, h3, h4, h5, p
			color white
		.slant-bg
			background teal
			transform matrix(1,-0.06, 0, 1.1, 0, 1)
			z-index -100
	#work
		background green
		position relative
		z-index 400
		h1, h2, h3, h4, h5, p
			color white
		.slant-bg
			background green
			transform matrix(1,-0.06, 0, 1.1, 0, 1)
			z-index -100
	#myProjects, #blog
		background light-grey
		position relative
		z-index 400
		.content
			padding-bottom 15vh
		h1, h2, h3, h4, h5, p
			color dark-grey
		.slant-bg
			background light-grey
			transform matrix(1,-0.06, 0, 1.07, 0, 1)
			z-index -100
	#postDetails, #projectDetails
		background white
		position relative
		z-index 400
		.slant-bg
			background white
			transform matrix(1,-0.06, 0, 1.1, 0, 1)
			z-index -100
			position absolute
			bottom 0
			height 1200px
		.content
			padding-bottom 15vh
		h1, h2, h3, h4, h5, p
			color dark-grey

	// Element Styling
	.content
		padding 30vh 0 40vh
		text-align center
		z-index 1000
		// Generics
		.graphic
			i
				text-align center
				font-size 50
				line-height 30rem
				color white
		.text
			p
				text-align center
		.links
			margin-top 5vh
			a
				margin-right 60px
				i
					text-align center
					font-size 36
					line-height 30rem
					color white
				&:last-child
					margin-right 0
		// Homepage specific interactive preview for work entries
		.interactive-preview
			margin-top 7vh
			a
				width 33%
				display inline-block
				transition 2s all
				img
					width 100%
					height auto
					box-shadow 0px 5px 8px 1px shadow
				&:nth-child(2)
					transform scale(1.1)
					z-index 100
				&:hover
					transform scale(1.2)
					z-index 200

#myProjects
	.gallery
		clearfix()
		margin-top 100px
		li
			list-style-type none
			padding 0
			margin 0
			span(1/1, cycle: 1)
			box-sizing border-box
			transition all 1s
			z-index 100
			background white
			margin-bottom 50px
			border-radius 3px
			position relative
			overflow hidden
			box-shadow 0px 6px 12px 0px rgba(189, 189, 189, 0.75)
			.overlay
				background linear-gradient(-180deg, rgba(255,255,255,0.00) 0%, rgba(156,156,156,0.80) 150%)
				position absolute
				width 100%
				height 100%
				border-bottom 4px solid rgb(148, 148, 148)
				box-sizing border-box
			&:first-child
				.overlay
					border-bottom 4px solid teal
			&:nth-child(2n+0)
				.overlay
					border-bottom 4px solid green
			&:nth-child(3n+0)
				.overlay
					border-bottom 4px solid tan
			.project-title
				position absolute
				bottom 20px
				left 20px
				font-size 26
				font-weight 400
				color white
				margin 0
				padding 0
			.image
				img
					width 100%
					height auto
			&:hover
				border-radius 6px
				transform scale(1.075)
				box-shadow 0px 6px 12px 0px rgba(140, 140, 140, 0.0)
				transition all 0.50s
				z-index 200


// Blog List Stylin'
#blog
	.blogList
		margin-top 100px
		li.post
			text-align left
			list-style-type none
			margin-bottom 80px
			.post-details
				font-style italic
				.date
					display inline-block
				.author
					display inline-block
			h3
				margin-left -3px
				margin-bottom 12rem
				color blue
			hr:last-child
				display none

#projectDetails
	.title
		font-family 'Fira Sans', sans-serif
		font-weight 200
		color dark-grey
		font-size 50
	.preview
		img
			width 100%
	.project-content
		padding-left 5%
		padding-right 5%
		img
			width 100%
			height auto
			box-shadow 0px 3px 6px #777
			margin-bottom 24px
		p
			text-align justify
	.project-gallery
		cf()
		margin-top 30px
		ul
			margin 0
			padding 0
			li
				overflow hidden
				margin-bottom 2.0%
				img
					width 100%
					height auto
					border 2px solid #D5D5D5
					box-sizing border-box
					border-radius 3px
		ul.single-column
			li
				column(1/1, cycle: 1)
		ul.two-column
			li
				column(1/2, cycle: 2)
	.link
		text-align center


#postDetails
	#post
		h3
			text-align left
	.post-image
		padding 0 5%
		img
			width 100%
	.post-content
		padding-left 5%
		padding-right 5%
		img
			width 100%
			height auto
		p
			text-align justify
	.post-meta
		font-style italic
		display inline-block
		padding 13px 16px
		background rgba(50,50,50,0.1)
		border-radius 3px
	ul
		margin 0
		padding 0
		li
			list-style-type none
			text-align left
			margin-bottom 20px
			border-left 2px solid gold
			padding 15px 15px 13px 15px
			background light-grey
			transition all 1.25s
			border-radius 3px
			&:hover
				background shaded-grey
				transition all 1.25s
			a
				font-size 15

footer
	background slate
	z-index 100
	padding 150px 0 40px
	.copyright
		column(1/2)
		font-size 15
		font-weight 500
		color white
		text-transform uppercase
	.links
		column(1/2)
		text-align right
		a
			color white
			font-size 15
			font-weight 500
			text-transform uppercase
			margin-right 30px
			&:hover
				color grey
			&:last-child
				margin-right 0


// Animation Time, Hit it!
$keyframe-name = pulse
	@keyframes {$keyframes-name}
		for i in 0..10
			{0.2 * i}
				transform scale(i/10)
