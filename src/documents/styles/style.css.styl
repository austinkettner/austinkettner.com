@import 'jeet'
@import 'axis'
@import 'rupture'

rupture.enable-em-breakpoints = true

// Normalize Mode, engage!
normalize-css()
base()

// Colors, spawn!
light-grey = #E1E1E1
dark-grey = #666666
grey = #eaeaea
blue = #69A5EA
orange = RGBA(230, 126, 34, 1)
green = RGBA(43, 204, 113, 1)
dark-blue = #396ea8
light-shadow = rgba(0, 0, 0, 0.1)
shadow = rgba(0,0,0,0.2)

font-size(n)
	font-size n * 1px
	font-size n * 1rem
	line-height n * 1rem

// Custom Vendor Prefixing Rest Params
transform(args...)
	-webkit-transform args
	transform args

html
	font-size 1px

body
	font-family 'Fira Sans', sans-serif
	color #5d5d5d
	font-weight 400
	z-index 1
	font-size 14
	margin 0
	// background linear-gradient(0deg, rgba(255, 255, 255, 0.20), rgba(255, 255, 255, 0.40)), url(/images/bg-image-1.png) no-repeat center center / cover

// Headings
h1
	font-family 'Fira Sans', sans-serif
	font-weight 200
	color #999
	font-size 48
	margin-bottom .5em
	margin-top 1.25em

h2
	font-family 'Fira Sans', sans-serif
	font-weight 500
	color #999
	font-size 38
	margin-bottom 0.25em
	margin-top 1.25em

h3
	font-family 'Fira Sans', sans-serif
	font-weight 300
	color #999
	font-size 30

h4
	font-family 'Fira Sans', sans-serif
	font-weight 400
	color #999
	font-size 22

h5
	font-family 'Fira Sans', sans-serif
	font-weight 400
	color #999
	font-size 16

p
	font-family 'Fira Sans', sans-serif
	font-size 16
	font-weight 300
	text-align justify
	line-height 2
	color #777
	&.highlight
		font-style italic
		color orange

a
	color rgba(101, 174, 245, 1)
	text-decoration none
	font-weight 500
	font-size 13

img
	border-radius 3px
	z-index 0

hr
	background rgba(50, 50, 50, 0.5)
	height 2px
	margin-top 25px
	margin-bottom 40px
	border none

code
	white-space normal
	background rgba(0, 0, 0, 0.1)
	padding 10px 20px
	border-radius 3px

.cursive
	font-family 'Pacifico', cursive

// Base Elements
.container
	center(max-width = 960px)

.container-narrow
	center(max-width = 880px)

// Stylin'
#header
	clearfix()
	position fixed
	width 100%
	padding-top 1vh
	padding-bottom 1vh
	z-index 1000
	padding-top 30px
	.brand
		column(1/3)
		text-align left
		.name
			font-size 20px
			line-height 24px
			color white
			display inline-block
			margin-left 5%
			margin-top 5px
		.profession
			font-size 16px
			display inline-block
			margin-left 3%
			color grey
			margin-top 3px
	nav
		column(2/3)
		text-align right
		ul.nav
			margin 0px 3% 0 0
			clearfix()
			li
				display inline-block
				overflow hidden
				box-sizing border-box
				background rgba(0,0,0,0.42)
				margin-right 1%
				transition all 2s
				border-radius 3px
				&:last-child
					margin-right 0
				&:hover
					background rgba(0,0,0,0.9)
					border-radius 8px
					transition all 1.25s
				a
					color white
					margin 0
					padding 9px 26px 7px
					display block

section
	// Per Section Styles (mainly backgrounds)
	#intro
		background linear-gradient(top, rgba(255,255,255,0.0), rgba(255,255,255,0.2), rgba(255,255,255,1)), url(/images/bg-image-1.jpg) no-repeat top center / cover
		min-height 100vh
		h1, h2, h3, h4, h5
			color white
	#contact
		background linear-gradient(top, rgba(255,255,255,1.0), rgba(255,255,255,0.8), rgba(255,255,255,0.0)), url(/images/bg-image-2.jpg) no-repeat bottom center / cover
	#myStartups
		background linear-gradient(top, rgba(255,255,255,0.0), rgba(255,255,255,0.3), rgba(255,255,255,0.7), rgba(255,255,255,1.0)), url(/images/bg-image-1.jpg) no-repeat top center / cover
	#otherWork
		background white
	#conceptProjects
		background white
	#blog
		background linear-gradient(top, rgba(255,255,255,0.0), rgba(255,255,255,0.2), rgba(255,255,255,1)), url(/images/bg-image-1.jpg) no-repeat top center / cover
	#blogPosts
		background white
	#projectDetails
		background linear-gradient(top, rgba(212,212,212,0.8), rgba(255,255,255,1.0)), url(/images/bg-image-3.jpg) no-repeat top center / 100%
	#postDetails
		background linear-gradient(top, rgba(212,212,212,0.4), rgba(255,255,255,1), rgba(255,255,255,1)), url(/images/bg-image-4.jpg) no-repeat top center / 100%

	// Element Styling
	.content
		padding-top 10vh
		padding-bottom 10vh
		text-align center
		&.homepage
			padding-top 40vh
			padding-bottom 40vh
		&.intro
			padding-top 40vh
			padding-bottom 10vh
		&.top
			padding-top 40vh
			padding-bottom 10vh

		// Generics
		.text
			p
				text-align center
		.links
			margin-top 5vh
			a
				margin-right 20px
				&:last-child
					margin-right 0
		// Homepage specific interactive preview for work entries
		.interactive-preview
			margin-top 7vh
			a
				width 33%
				display inline-block
				transition 2s all
				img
					width 100%
					height auto
					box-shadow 0px 5px 8px 1px shadow
				&:nth-child(2)
					transform scale(1.1)
					z-index 100
				&:hover
					transform scale(1.2)
					z-index 200
		.gallery
			clearfix()
			margin-top 7vh
			li
				list-style-type none
				padding 0
				margin 0
				span(1/3, cycle: 3)
				box-sizing border-box
				padding 0.3% 0.5%
				transition 2.5s all
				z-index 100
				+below(768px)
					span(3/3, cycle: 1)
				img
					width 100%
					box-shadow 0px 4px 6px 0px shadow
				&:hover
					transform scale(1.2)
					z-index 200


// Blog List Stylin'
#blogPosts
	padding-bottom 10vh
	.post-details
		font-style italic
		.date
			display inline-block
		.author
			display inline-block
	h3
		margin-left -3px
		margin-bottom 12rem
		color blue
	hr:last-child
		display none

#projectDetails
	margin-bottom 20vh
	.title
		font-family 'Fira Sans', sans-serif
		font-weight 200
		color #5d5d5d
		font-size 64
	.preview
		img
			width 100%
	.project-content
		padding-left 5%
		padding-right 5%
		img
			width 100%
			height auto
			box-shadow 0px 3px 6px #777
			margin-bottom 24px
		p
			margin-bottom 4vh
	.project-gallery
		cf()
		margin-top 30px
		ul
			margin 0
			padding 0
			li
				column(1/2, cycle: 2)
				overflow hidden
				margin-bottom 2.0%
				img
					width 100%
					height auto
					border 2px solid #D5D5D5
					box-sizing border-box
	.link
		text-align center


#postDetails
	#post
		h3
			text-align left
	.post-image
		padding 0 5%
		img
			width 100%
	.post-content
		padding-left 5%
		padding-right 5%
		img
			width 100%
			height auto
		p
			margin-bottom 4vh
	.post-meta
		font-style italic
		display inline-block
		padding 13px 16px
		background rgba(50,50,50,0.1)
		border-radius 3px


// Buttons, Yee!
button
	width 200px
	height 45px
	background blue
	color white
	border none
	font-family 'Fira Sans', sans-serif
	font-size 18
	font-weight 500
	padding-top 2px
	transition 2s all
	border-radius 2px
	padding 10px 5px 5px 5px
	&:hover
		cursor pointer
		background dark-blue

.check-it-out
	margin-top 40px
	background green


// Animation Time, Hit it!
$keyframe-name = pulse
	@keyframes {$keyframes-name}
		for i in 0..10
			{0.2 * i}
				transform scale(i/10)
