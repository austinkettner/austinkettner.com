@import 'jeet'
@import 'axis'
@import 'rupture'

rupture.enable-em-breakpoints = true

// Normalize Mode, engage!
normalize-css()
base()

font-size(n)
	font-size n * 1px
	font-size n * 1rem

// Colors!!!
orange = rgba(255, 153, 0, 1)
dark-orange = rgb(186, 99, 0)

html
	font-size 1px

body
	margin 0
	padding 0
	font-family 'Alegreya', serif
	color #5d5d5d
	font-weight 400
	z-index 1
	&:before
		content ""
		position fixed
		background orange
		left 0
		right 0
		height 3px

// Headers
h1
	font-family 'Alegreya', serif
	font-weight 700
	color #999
	font-size 48
	margin-bottom .5em
	margin-top 1.25em

h2
	font-family 'Alegreya', serif
	font-weight 700
	color #999
	font-size 38
	margin-bottom 1.25em
	margin-top 1.25em

h3
	font-family 'Alegreya', serif
	font-weight 700
	color #999
	font-size 30

h4
	font-family 'Alegreya', serif
	font-weight 400
	color #999
	font-size 22

h5
	font-family 'Alegreya', serif
	font-weight 400
	color #999
	font-size 16

p
	font-size 17
	font-weight 400
	text-align justify
	line-height 2
	color #999

a
	color rgba(101, 174, 245, 1)
	text-decoration none

img
	border-radius 6px
	z-index 0

hr
	color rgba(209, 209, 209, 0.47)
	height 1px
	margin-top 40px
	margin-bottom 40px

code
	white-space normal
	background rgba(0, 0, 0, 0.1)
	padding 10px 20px
	border-radius 3px


// Base Elements
.container
	center(max-width = 1200px)

.container-narrow
	center(max-width = 880px)

.third
	col(1/3)

// Color Classes
.orange
	color orange

// Navigation & Header Styling
#header
	text-align center
	border-bottom 1px solid rgba(231, 231, 231, 1)
	min-height 20vh
	.logo
		margin-top 45px
		margin-bottom 30px
		img
			width 64px
			height 100%
.nav
	margin-bottom 28px
	padding 0
	li
		display inline-block
		border 0px
		a
			padding 2px 18px 2px
			font-size 14
			font-weight 700
			border-radius 3px
			color #999999
			text-decoration none
	li+li
		margin-left 0px
		a
			border-radius 3px
			color #999999
	li.active
		a
			background-color orange
			color white
			&:hover
				background-color orange
			&:focus
				background-color orange

.btn
	border-radius 2px
	color black
	background-color white
	border 2px solid orange
	margin-top 40px
	padding 10px 60px
	font-size 15
	cursor pointer
	&:hover
		background-color orange
		border 1px solid orange
		color white

#content
	padding 40px 0
	background #f5f5f5
	min-height 79vh
	box-sizing border-box

// Project Grid (Homepage)
.project-grid
	col(3/3)
	li
		col(1/3)
		display inline-block
		margin-bottom 2.5%
		box-sizing border-box
		border-radius 6px
		overflow hidden
		border 1px solid rgba(231, 231, 231, 1)
		img
			width 100%
			height auto
			transition all 1s ease-in
			border-radius 0px
		&:first-child
			width 100%
		&:nth-of-type(3n+1)
			margin-right 0
		a:hover
			img
				transform scale(1.1)



.project
	margin 40px 0 120px
	text-align center
	img
		width 100%

.post
	margin 20px 0
	h1
		color #aeaeae
	h3
		margin-bottom 0.2em
	.post-details
		margin 0 0 25px
		font-size 15
		.date, .author
			display inline-block
	img
		width 100%
		margin-top 20px
		margin-bottom 20px

// Post Content Styling
.post-content
	margin-top 30px
	text-align left
	img
		margin 1vh 0
		border-radius 4px

article#post
	text-align center

#article-meta
	margin-top 50px
	text-align center
	font-size 12px
	.author
		margin-left 20px

code
	white-space normal

/////////////////////////////////////////////
//////////////// Page Specific //////////////
/////////////////////////////////////////////

// ABOUT SECTION
#about
	text-align center
